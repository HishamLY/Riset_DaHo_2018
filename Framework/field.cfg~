  xPosOwnFieldBorder           -xPosOpponentFieldBorder


  yPosLeftFieldBorder          2700	2700 	batas pinggir lapangan terluar
  yPosLeftSideline             1975	1975	garis lapangan
  yPosLeftGroundline           1975	1975
  yPosLeftPenaltyArea          1075	1075	kotak penalty
  yPosLeftGoal                  750	750	tiang gawang
  yPosCenterGoal                  0	0
  yPosRightGoal                -yPosLeftGoal
  yPosRightPenaltyArea         -yPosLeftPenaltyArea
  yPosRightGroundline          -yPosLeftGroundline
  yPosRightSideline            -yPosLeftSideline
  yPosRightFieldBorder         -yPosLeftFieldBorder

  //throw-in points
  xPosThrowInPointOpponentHalf 1200
  xPosThrowInPointCenter          0
  xPosThrowInPointOwnHalf      -xPosThrowInPointOpponentHalf

  //other dimensions
  fieldLinesWidth                50
  goalPostRadius                 48 // 47.5 would be correct for our goals. Should be 50 according to rules.
  centerCircleRadius            625
  goalHeight                    800
  ballRadius                     33 // should be 32.5
  ballFriction                  200

