# This is the field configuration for the 
# SPL field 2010


[dimensions]

  xPosOpponentFieldBorder      3700	3700	garis pinggir lapangan
  xPosOpponentGoal             3475	3000	kuning paling ujung gawang. sekarang gak relevan. 3000
  xPosOpponentGoalpost         2975	2975  	posisi gawang
  xPosOpponentGroundline       2975	2975
  xPosOpponentSideCorner       2975	2975	pojokan
  xPosOpponentPenaltyArea      2425	2425	x kotak penalty
